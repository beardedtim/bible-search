{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "User",
  "description": "User of the Bible Search system",
  "type": "object",
  "required": ["email", "password", "created_at", "meta"],
  "properties": {
    "email": {
      "type": "string",
      "format": "email"
    },
    "password": {
      "type": "string",
      "minimum": 6
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "meta": {
      "type": "object",
      "description": "The metadata that we hold about a User for profile reasons"
    }
  }
}
